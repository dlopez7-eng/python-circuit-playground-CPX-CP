// defines pins numbers
const int trigPin = 11;
const int echoPin = 12;

long duration;
int distance;
bool objectDetected = false;  // state tracker
int objectCount = 0;          // counts how many objects detected

void setup() {
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  Serial.begin(9600);
}

void loop() {
  // Send ultrasonic pulse
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  // Measure echo time
  duration = pulseIn(echoPin, HIGH);
  distance = duration * 0.034 / 2;

  // --- Detection logic ---
  if (distance <= 10) {
    if (!objectDetected) { 
      Serial.println("Object Detected & Present");
      objectDetected = true;
    }
    Serial.print("Distance: ");
    Serial.print(distance);
    Serial.println(" cm");
  } else {
    if (objectDetected) {
      Serial.println("Detected Object Is Gone");
      objectCount++;   // count the event
      Serial.print(objectCount);
      Serial.println(" Objects Detected");
      objectDetected = false;
    }
    Serial.print("Distance: ");
    Serial.print(distance);
    Serial.println(" cm");
    Serial.println("Waiting To Detect An Object");
  }

  delay(500); 
}
